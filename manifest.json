{
  "manifest_version": 3,
  "name": "Resume Auto-Fill Assistant",
  "version": "1.0.1",
  "description": "Automatically fill job applications using your resume data",

  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://*.indeed.com/*",
    "https://*.glassdoor.com/*",
    "https://*.monster.com/*",
    "https://*.ziprecruiter.com/*",
    "https://*.workday.com/*",
    "https://*.greenhouse.io/*",
    "https://*.lever.co/*",
    "https://*.wantedly.com/*",
    "https://*.gaijinpot.com/*",
    "http://localhost:*/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Resume Auto-Fill"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/*",
        "https://*.indeed.com/*",
        "https://*.glassdoor.com/*",
        "https://*.monster.com/*",
        "https://*.ziprecruiter.com/*",
        "https://*.workday.com/*",
        "https://*.greenhouse.io/*",
        "https://*.lever.co/*",
        "https://*.wantedly.com/*",
        "https://*.gaijinpot.com/*"
      ],
      "js": [
        "content/utils.js",
        "content/selectors.js",
        "content/formFiller.js",
        "content/pageAnalyzer.js",
        "content/content_main.js"
      ],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["icons/*", "js/modules/linkedinExtractor.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
